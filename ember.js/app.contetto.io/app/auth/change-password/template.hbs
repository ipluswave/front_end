<div class="container content">
  <div class="row">
    <div class="col-md-6 col-sm-8 col-sm-offset-2 col-md-offset-3">
      <div class="loginbox">
        {{#unless model.success}}
          <form class="form-horizontal text-center" {{action "resetPassword" on="submit"}} autocomplete="off">
            <div class="form-group">
              {{#if model.error}}
                <span class="help-block">{{model.error}}</span>
              {{/if}}
              <div class="input-group">
                <div class="input-group-addon"><i class="fa fa-user"></i></div>
                  {{input
                    type="password"
                    class="form-control"
                    id="new-password"
                    placeholder="New Password"
                    value=model.newPassword
                  }}
              </div>

            </div>
            <div class="form-group">
              <div class="input-group">
                <div class="input-group-addon"><i class="fa fa-lock"></i></div>
                  {{input
                    type="password"
                    class="form-control"
                    id="confirm-password"
                    placeholder="Confirm Password"
                    value=model.confirmPassword
                  }}
              </div>

            </div>

            <div class="form-group">
              <button class="login-btn" type="submit" role="button" disabled={{model.isSubmitted}}>
                Reset Password
              </button>
            </div>
          </form>
        {{else}}
          <span class="help-block">
            Password successfully changed . Please {{#link-to 'auth.index'}} Sign In {{/link-to}}
          </span>
        {{/unless}}
      </div>
    </div>
  </div>
</div>