<div class="container content">
    <div class="row">
        <div class="col-md-6 col-sm-8 col-sm-offset-2 col-md-offset-3">
            <div class="loginbox">
                <form class="form-horizontal text-center" {{action "login" on="submit"}} autocomplete="off">
                  <div class="form-group">
                      <div class="input-group">
                          <div class="input-group-addon"><i class="fa fa-user"></i></div>
                          <!-- <input type="text" class="form-control" placeholder="Email"> -->
                          {{input type="email" class="form-control" id="e-mail" placeholder="E-mail" value=model.session.email}}
                      </div>
                      {{#each model.errors.email as |error|}}
                          <span class="help-block text-left">{{error.message}}</span>
                      {{/each}}
                  </div>
                  <div class="form-group">
                      <div class="input-group">
                          <div class="input-group-addon"><i class="fa fa-lock"></i></div>
                          <!-- <input type="password" class="form-control" placeholder="Password"> -->
                          {{input type="password" class="form-control" id="password" placeholder="Password" value=model.session.password}}
                      </div>
                      {{#each model.errors.password as |error|}}
                          <span class="help-block text-left">{{error.message}}</span>
                      {{/each}}
                  </div>
                  <div class="form-group text-left">
                    {{#link-to 'auth.forgot-password' class="forget-pass"}}
                      Forget Password ?
                    {{/link-to}}
                  </div>
                  <div class="form-group"><button class="login-btn" type="submit" role="button" disabled={{model.data.isSubmitted}}>Sign In</button></div>
                  <div class="form-group">{{#link-to "auth.signup" class="create-btn"}}Create an account{{/link-to}}</div>
                </form>
            </div>
        </div>
    </div>
</div>