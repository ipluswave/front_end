<div class="container content">
    <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
            <div class="row">
                <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
                    <div class="row">
                         <div class="col-md-12 text-center">
                             <h5> You've been invited to join Contetto. </h5>
                             <h6> Sign-up to accept/reject invite. </h6>
                         </div>
                    </div>
                    <form class="form-horizontal" {{action "signup" on="submit"}} autocomplete="off">
                        <div class="box">
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="form-group {{if model.errors.email 'has-error'}}">
                                        <!--<input type="email" class="form-control" id="username" placeholder="Username">-->
                                        {{input type="email" class="form-control" id="username" placeholder=model.invite.email value=model.user.email disabled=true}}
                                        {{#each model.errors.email as |error|}}
                                            <span class="help-block">{{error.message}}</span>
                                        {{/each}}
                                    </div>
                                    <div class="form-group {{if model.errors.email 'has-error'}}">
                                        <!--<input type="password" class="form-control" id="password" placeholder="Password">-->
                                        {{input type="password" class="form-control" id="password" placeholder="Password" value=model.user.password}}
                                        {{#each model.errors.password as |error|}}
                                            <span class="help-block">{{error.message}}</span>
                                        {{/each}}
                                    </div>
                                    <div class="form-group {{if model.errors.firstName 'has-error'}}">
                                        {{input type="text" class="form-control" id="first-name" placeholder="First Name" value=model.user.firstName}}
                                        {{#each model.errors.firstName as |error|}}
                                            <span class="help-block">{{error.message}}</span>
                                        {{/each}}
                                    </div>
                                    <div class="form-group {{if model.errors.lastName 'has-error'}}">
                                        {{input type="text" class="form-control" id="last-name" placeholder="Last Name" value=model.user.lastName}}
                                        {{#each model.errors.lastName as |error|}}
                                            <span class="help-block">{{error.message}}</span>
                                        {{/each}}
                                    </div>
                                    <div class="form-group {{if model.errors.phoneNumber 'has-error'}}">
                                        {{input type="text" class="form-control" id="phone-number" placeholder="Phone Number" value=model.user.phoneNumber}}
                                        {{#each model.errors.phoneNumber as |error|}}
                                            <span class="help-block">{{error.message}}</span>
                                        {{/each}}
                                    </div>
                                </div>
                            </div>
                            <div class="row login-buttons">
                                <div class="col-xs-12">
                                    <button class="w100 btn btn-success sign-up" type="submit" role="button" disabled={{model.isSubmitted}}><img
                                            src="assets/images/whiteicon.png"> Sign Up
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
