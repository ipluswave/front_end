<div class="container content">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1 welcome-pagebox">
            <h3 class="text-center">Brand</h3>
            {{#unless (eq model.brandInvites.length 0)}}
            <div class="box">
                <div class="row">
                    <div class="col-xs-12 text-center">
                        <h4>Your Brand Invites</h4>
                        <div class="row" style="padding-top: 5px;">
                            {{#if model.brandInvites.length}}
                                {{#each model.brandInvites as |invite|}}
                                    <div class="col-xs-8">
                                        Join <strong>{{invite.brand.name}}</strong> as
                                        <strong>{{invite.role.name}}</strong>
                                    </div>
                                    <div class="col-xs-4">
                                        {{#if (eq invite.status "accept")}}
                                            <button type="button"
                                                    class="btn btn-sm btn-success" {{action 'selectBrand' invite.brand.id}}>
                                                Select and continue
                                            </button>
                                        {{else}}
                                            <button type="button"
                                                    class="btn btn-sm btn-success" {{action 'acceptInvite' invite}}>
                                                Accept
                                            </button>
                                            <button type="button"
                                                    class="btn btn-sm btn-warning" {{action 'rejectInvite' invite}}>
                                                Reject
                                            </button>
                                        {{/if}}
                                    </div>
                                {{/each}}
                            {{else}}
                                <p>You don't have any pending brand invitation.</p>
                            {{/if}}
                        </div>
                    </div>
                </div>
            </div>
            {{/unless}}
            {{#if (eq model.brandInvites.length 0)}}
            <div class="box">
                <div class="row">
                    <div class="col-xs-12 text-center">
                        <form class="form-horizontal" {{action "createBrand" on="submit"}} autocomplete="off">
                            <h4>We need a little more information about your brand for company <strong>{{model.brand.company.name}}</strong>.</h4>
                            <div class="row">
                                <div class="col-xs-12 ">
                                    <p>What is the name of the brand</p>
                                </div>
                                <div class="col-xs-12 ">
                                    <div class="{{if model.errors.name 'has-error'}}">
                                        <!--<input type="text" class="form-control" id="brand" placeholder="Brand Name">-->
                                        {{input type="text" class="form-control" id="brand" placeholder="Brand Name" value=model.brand.name}}
                                        {{#each model.errors.name as |error|}}
                                            <span class="help-block">{{error.message}}</span>
                                        {{/each}}
                                    </div>
                                </div>
                            </div>
                            <div class="row text-center">
                                <div class="col-xs-12">
                                    <button class="btn btn-success" disabled={{model.data.isSubmitted}}>Next</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            {{/if}}
        </div>
    </div>
</div>
